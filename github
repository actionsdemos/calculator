name: $(Build.SourceBranchName)_$(Rev:r)
on:
 pull_request:
  branches:
   - 'master'
jobs:
  Build_Webapp:
    name: Building Webapp 
    runs-on: uhg-runner   
  inputs:
    environment:
      description: 'CWP Environment'
      default: 'dev'
      type: choice
      options:
        - dev
        - ts1
        - ts2
        - ts3
        - stg
        - prf
        - cte
        - tst
    region:
     description: 'CWP Environment'     
     default: 'central'
     type: choice
     options:
      - central
      - east
      - both
